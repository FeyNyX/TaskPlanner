{% block body -%}
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addCategoryModal">
        Add a category
    </button>
    <hr>
    <ul class="nav nav-pills">
        <li type="button" class="active categories btn btn-info"><a data-toggle="pill" href="#home">All tasks</a></li>
        {% for category in entities %}
            <li type="button" class="categories btn btn-info"><a data-toggle="pill" href="#menu{{ category.id }}"><span
                            class="badge">{{ category.tasks|length }}</span> {{ category.name }}</a></li>
        {% endfor %}
    </ul>

    <!-- AddCategoryModal -->
    <div id="addCategoryModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- AddCategoryModal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add a new category</h4>
                </div>
                <div class="modal-body">
                    {{ render(controller("TaskPlannerBundle:Category:new")) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
