{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                {{ render(controller("TaskPlannerBundle:Category:index")) }}
            </div>
            <div class="col-sm-10">
                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        {{ render(controller("TaskPlannerBundle:Task:index")) }}
                    </div>
                    {% for category in categories %}
                        <div id="menu{{ category.id }}" class="tab-pane fade">
                            {{ render(controller("TaskPlannerBundle:Category:show", {'id': category.id})) }}
                        </div>
                    {% endfor %}
                  </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
